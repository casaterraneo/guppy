@page "/employees"
@inject IHttpClientFactory HttpClientFactory
@inject IAccessTokenProvider TokenProvider
@inject IWebAssemblyHostEnvironment Env
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Employees</PageTitle>

<h1>Employees</h1>

<p>This component demonstrates fetching data from the server.</p>

<div>
	<input type="text" @bind="cli" placeholder="Inserisci la chiave" />
	<i class="bi bi-plus-lg pointer" @onclick ="() => GetEmployees()"></i>
</div>


@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Last Name</th>
				<th>First Name</th>
				<th>Title</th>
				<th>Title of Courtesy</th>
				<th>Birth Date</th>
				<th>Hire Date</th>
				<th>Address</th>
				<th>City</th>
				<th>Region</th>
				<th>Postal Code</th>
				<th>Country</th>
				<th>Home Phone</th>
				<th>Extension</th>
				<th>Photo</th>				
				<th>Reports To</th>
				@* <th>Photo Path</th> *@
			</tr>
			<tr>
				<th colspan="16">Notes</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in employees)
			{
				<tr>
					<td>@employee.Id</td>
					<td>@employee.LastName</td>
					<td>@employee.FirstName</td>
					<td>@employee.Title</td>
					<td>@employee.TitleOfCourtesy</td>
					<td>@employee.BirthDate</td>
					<td>@employee.HireDate</td>
					<td>@employee.Address</td>
					<td>@employee.City</td>
					<td>@employee.Region</td>
					<td>@employee.PostalCode</td>
					<td>@employee.Country</td>
					<td>@employee.HomePhone</td>
					<td>@employee.Extension</td>
					<td>@(employee.Photo != null ? "Yes" : "No")</td>					
					<td>@employee.ReportsTo</td>
					@* <td>@employee.PhotoPath</td> *@
				</tr>
				<tr>
					<td colspan="16">@employee.Notes</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
    private Employee[]? employees;
	private string? cli;

    protected override async Task OnInitializedAsync()
    {
		await GetEmployees();			
    }

	async Task GetEmployees()
    {
		var queryString = string.IsNullOrWhiteSpace(cli) ? Env.Environment : cli;
		var http = HttpClientFactory.CreateClient("api");
		employees = await http.GetFromJsonAsync<Employee[]>($"employees?cli={queryString}");			
    }
}

